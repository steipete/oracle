{
  "$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
  "javascript": {
    "globals": ["Bun"]
  },
  "formatter": {
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": {
          "level": "error",
          "options": {
            "ignoreRestSiblings": false
          }
        },
        "noUnusedImports": "error",
        "noUndeclaredVariables": {
          "level": "error",
          "options": {
            "checkTypes": true
          }
        }
      },
      "complexity": {
        "noUselessFragments": "warn",
        "noUselessLoneBlockStatements": "warn"
      },
      "style": {
        "useConsistentObjectDefinitions": {
          "level": "warn",
          "options": {
            "syntax": "shorthand"
          }
        },
        "useNamingConvention": {
          "level": "warn",
          "options": {
            "strictCase": false,
            "conventions": [
              {
                "selector": {
                  "kind": "typeLike"
                },
                "formats": [
                  "PascalCase"
                ]
              },
              {
                "selector": {
                  "kind": "function"
                },
                "formats": [
                  "camelCase",
                  "PascalCase"
                ]
              },
              {
                "selector": {
                  "kind": "variable"
                },
                "formats": [
                  "camelCase",
                  "CONSTANT_CASE"
                ]
              },
              {
                "selector": {
                  "kind": "classMember"
                },
                "formats": [
                  "camelCase",
                  "CONSTANT_CASE"
                ]
              },
              {
                "selector": {
                  "kind": "typeMember"
                },
                "formats": [
                  "camelCase",
                  "snake_case"
                ]
              },
              {
                "selector": {
                  "kind": "objectLiteralMember"
                },
                "formats": [
                  "camelCase",
                  "snake_case"
                ]
              }
            ]
          }
        }
      },
      "security": {
        "noGlobalEval": "error"
      },
      "nursery": {
        "noFloatingPromises": "error",
        "noUnnecessaryConditions": "warn"
      }
    }
  },
  "files": {
    "includes": [
      "src/**/*.{js,ts}",
      "bin/**/*.js",
      "scripts/**/*.{js,ts}",
      "!scripts/browser-tools.ts",
      "tests/**/*.ts",
      "!node_modules/**/*",
      "!coverage/**/*",
      "!.bun-check/**/*"
    ]
  }
}
